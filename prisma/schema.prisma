// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Book {
  id String @id @default(uuid()) @map("_id")
  title String
  language String
  num_pages Int
  publication_date DateTime
  publisher String
  price Float
  user User @relation(fields: [userId], references: [id])
  userId String

  @@map("book")
}

model User {
  id String @id @default(uuid()) @map("_id")
  username String
  password String
  books Book[]

  @@map("user")
}
